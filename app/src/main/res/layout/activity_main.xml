<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <com.example.customview.CustomEditText
            android:id="@+id/customEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:nextFocusUp="@null"
            android:nextFocusLeft="@null"
            android:nextFocusRight="@null"
            android:nextFocusDown="@id/customEditText2"
            app:hint="CustomEditText"
            tools:text="CustomEditText"
            tools:error="Error"/>

        <com.example.customview.CustomEditText
            android:id="@+id/customEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:nextFocusUp="@id/customEditText1"
            android:nextFocusLeft="@null"
            android:nextFocusRight="@null"
            android:nextFocusDown="@id/customEditText3"
            app:hint="CustomEditText"
            tools:text="CustomEditText"
            tools:error="Error"/>

        <com.example.customview.CustomEditText
            android:id="@+id/customEditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:nextFocusUp="@id/customEditText2"
            android:nextFocusLeft="@null"
            android:nextFocusRight="@null"
            android:nextFocusDown="@null"
            app:hint="CustomEditText"
            tools:text="CustomEditText"
            tools:error="Error"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>