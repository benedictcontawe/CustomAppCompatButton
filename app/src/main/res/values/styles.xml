<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomChipFilterStyle" parent="@style/Widget.MaterialComponents.Chip.Filter" >
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>
    <style name="CustomChipEntryStyle" parent="@style/Widget.MaterialComponents.Chip.Entry" >
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>
</resources>
