<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Customviewapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomChipFilterStyle" parent="@style/Widget.MaterialComponents.Chip.Filter" >
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/pink</item>
    </style>
    <style name="CustomChipEntryStyle" parent="@style/Widget.MaterialComponents.Chip.Entry" >
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/pink</item>
    </style>
</resources>